<h1>New Game !</h1>
  <ul>
  <% @range.each do |elem| %>
    <li class="letter">
    <%= elem  %>
    </li>
  <% end %>
  </ul>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="text">What is the longest word you can find ?</label>
    <input type="hidden" name="range" value="<%=@range.join%>">
    <input type="text" name="text"id="text">
    <input type="submit">
  </form>
